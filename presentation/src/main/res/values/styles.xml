<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="app_title">
        <item name="android:fontFamily">@font/didact_gothic</item>
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="item">
        <item name="android:fontFamily">@font/didact_gothic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_hint_layout">
        <item name="android:textColorHint">@color/red</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:fontFamily">@font/didact_gothic</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="create_cock">
        <item name="android:fontFamily">@font/didact_gothic</item>
        <item name="android:textColor">#79747E</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cocktail_ti">
        <item name="android:fontFamily">@font/didact_gothic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="input_text">
        <item name="android:fontFamily">@font/didact_gothic</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColorHint">#FF0000</item>
        <item name="android:gravity">left</item>
        <item name="android:titleMarginEnd">10dp</item>
    </style>

    <style name="supporting">
        <item name="android:fontFamily">@font/didact_gothic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="button_positive" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">#4B97FF</item>
        <item name="android:gravity">center</item>
    </style>

</resources>