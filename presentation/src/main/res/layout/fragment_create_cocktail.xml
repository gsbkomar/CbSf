<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateCocktailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/rectangle_1"
            android:layout_width="216dp"
            android:layout_height="204dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="64dp"
            android:background="@drawable/rectangle_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/frame_1"
            app:layout_constraintBottom_toBottomOf="@id/rectangle_1"
            app:layout_constraintEnd_toEndOf="@id/rectangle_1"
            app:layout_constraintStart_toStartOf="@id/rectangle_1"
            app:layout_constraintTop_toTopOf="@id/rectangle_1" />

        <com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/text_field"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/text_field_small_gray"
            android:hint="@string/cocktail_name"
            app:layout_constraintEnd_toEndOf="@id/rectangle_1"
            app:layout_constraintStart_toStartOf="@id/rectangle_1"
            app:layout_constraintTop_toBottomOf="@id/rectangle_1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/title"
                android:layout_width="313dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_text_input_edit_text"
                android:gravity="bottom"
                android:maxLength="11"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/supporting"
            android:layout_width="297dp"
            android:layout_height="26dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="0sp"
            android:text="@string/supporting"
            android:textAppearance="@style/supporting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_field" />

        <com.google.android.material.textfield.TextInputLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/description"
            style="@style/input_text"
            android:layout_width="0dp"
            android:layout_height="164dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/text_field_gray"
            android:hint="@string/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/supporting">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description_edit_text"
                android:layout_width="350dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_text_input_edit_text"
                android:gravity="top"
                android:maxLength="300"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/supporting_description"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="0sp"
            android:text="@string/supporting_description"
            android:textAppearance="@style/supporting"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description" />


        <LinearLayout
            android:id="@+id/scroll_recipe"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="200dp"
            app:layout_constraintTop_toBottomOf="@id/supporting_description"
            android:layout_height="30dp">


        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/rc_recipe"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            tools:itemCount="13"
            tools:listitem="@layout/recipe_item" />


        </LinearLayout>

        <ImageButton
            android:background="@color/white"
            android:id="@+id/btn_add_recipe"
            app:layout_constraintBottom_toBottomOf="@id/scroll_recipe"
            app:layout_constraintTop_toTopOf="@id/scroll_recipe"
            app:layout_constraintStart_toEndOf="@id/scroll_recipe"
            android:src="@drawable/add_recipe"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/recipe"
            style="@style/input_text"
            android:layout_width="0dp"
            android:layout_height="164dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/text_field_gray"
            android:hint="@string/recipe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scroll_recipe">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/recipe_edit_text"
                android:layout_width="350dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_text_input_edit_text"
                android:gravity="top"
                android:maxLength="300"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/supporting_recipe"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="0sp"
            android:text="@string/supporting_description"
            android:textAppearance="@style/supporting"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recipe" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#4B97FF"
            android:fontFamily="@font/didact_gothic"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="31sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/supporting_recipe" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/didact_gothic"
            android:text="@string/cancel"
            android:textColor="#4B97FF"
            android:textSize="31sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_save"
            app:strokeColor="#4B97FF"
            app:strokeWidth="2dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>